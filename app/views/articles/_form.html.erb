<div class="well">
  <a href="#" class="btn primary" data-code="show">
    toggle code examples for each form element.
  </a>
</div>

<%= simple_form_for @article, :wrapper => :bootstrap, :html => { :class => 'form-horizontal' } do |f| %>
<pre class='prettyprint linenums lang-rb'>
# Use the defined bootstrap wrapper on config/initializers/simple_form.rb to create your form
simple_form_for(@article, :wrapper =&gt; :bootstrap, :html =&gt; { :class =&gt; 'form-horizontal' }) do |f|
</pre>

  <% if f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= f.error_notification %>
    </div>
  <% end %>

  <legend>Article</legend>
  <%= f.input :name, :input_html => { :class => "span6" },
              :hint => "add your article title here" %>
<pre class='prettyprint linenums lang-rb'>
  # You can use the same `span*` classes from the grid system.
  f.input :name, :input_html =&gt; { :class =&gt; "span6" }, :hint =&gt; "add your article title here"
</pre>

  <%= f.input :name, :wrapper => :prepend, :label => false do %>
    <%= content_tag :span, "Name", :class => "add-on" %>
    <%= f.input_field :name %>
  <% end %>

<pre class='prettyprint linenums lang-rb'>
  # Use different wrappers to use other elements from Bootstrap, like a 'prepend' box.
  f.input :name, :wrapper =&gt; :prepend, :label =&gt; false do
    content_tag :span, "Name", :class =&gt; "add-on"
    f.input_field :name
  end
</pre>

  <%= f.input  :published, :wrapper => :checkbox, :as => :boolean %>

<pre class='prettyprint linenums lang-rb'>
  # A specific wrapper for inline checkboxes.
  f.input :published, :wrapper =&gt; :checkbox, :as =&gt; :boolean
</pre>

  <%= content_tag :fieldset, :class => 'control-group' do %>
    <%= content_tag :label, 'Options', :class => 'control-label' %>
    <%= content_tag :div, :class => 'controls' do %>
      <%= f.label :secret, :class => 'checkbox' do %>
        <%= f.input :secret, :wrapper => :inline_checkbox, :as => :boolean %>
      <% end %>
      <%= f.label :draft, :class => 'checkbox' do %>
        <%= f.input :draft, :wrapper => :inline_checkbox, :as => :boolean %>
      <% end %>
    <% end %>
  <% end %>

<pre class='prettyprint linenums lang-rb'>
  # You can also use the inline checkboxes to create a list of items.
  content_tag :fieldset, :class =&gt; 'control-group' do
    content-tag :label, 'Options', :class =&gt; 'control-label' do
      content-tag :div, :class =&gt; 'controls' do
        f.label :secret, :class =&gt; 'checkbox' do
          f.input :secret, :wrapper =&gt; :inline_checkbox, :as =&gt; :boolean
        end
        f.label :draft, :class =&gt; 'checkbox' do
          f.input :draft, :wrapper =&gt; :inline_checkbox, :as =&gt; :boolean
        end
      end
    end
  end
</pre>

  <%= f.input :content_type, :collection => content_type_options,
              :hint => "multiple select", :input_html => { :multiple => true } %>
<pre class='prettyprint linenums lang-rb'>
  f.input :content_type, :collection =&gt; content_type_options, :input_html =&gt; { :multiple =&gt; true }
</pre>

  <%= f.input :category, :collection => content_type_options,
              :hint => "simple select box" %>
<pre class='prettyprint linenums lang-rb'>
  f.input :category, :collection =&gt; content_type_options, :hint =&gt; "simple select box"
</pre>

  <%= f.input :content, :input_html => { :class => "span6" } %>
<pre class='prettyprint linenums lang-rb'>
  f.input :content, :input_html =&gt; { :class =&gt; "span6" }
</pre>

  <%= f.input :disabled_text, :disabled => true,
              :hint => "an example of disabled input" %>

<pre class='prettyprint linenums lang-rb'>
  f.input :disabled_text, :disabled =&gt; true, :hint =&gt; "an example of disabled input"
</pre>

  <%= f.input :disabled_text, :wrapper => :prepend do %>
    <%= content_tag :label, :class => "add-on" do %>
      <%= check_box_tag :remove, 'true' %>
    <% end %>
    <%= f.input_field :disabled_text, :disabled => true %>
  <% end %>
<pre class='prettyprint linenums lang-rb'>
f.input :disabled_text, :wrapper =&gt; :prepend do
  content_tag :label, :class =&gt; "add-on" do
    check_box_tag :remove, 'true'
  end
  f.input_field :disabled_text
end
</pre>

  <%= f.input :disabled_text, :wrapper => :append do %>
    <%= f.input_field :disabled_text, :class => :mini, :disabled => true %>
    <%= content_tag :label, :class => "add-on active" do %>
      <%= check_box_tag :remove, 'true' %>
    <% end %>
  <% end %>

<pre class='prettyprint linenums lang-rb'>
  # Use the 'append' wrapper the same way as the 'prepend' one.
  f.input :disabled_text, :wrapper =&gt; :append do
    f.input_field :disabled_text, :class =&gt; :mini
    content_tag :label, :class =&gt; "ad d-on active" do
      check_box_tag :remove, 'true'
    end
  end
</pre>

  <div class="form-actions">
    <%= f.button :submit, :class => 'primary' %>
    <%= button_tag 'Cancel', :type => :reset, :class => "btn" %>
  </div>
<pre class='prettyprint linenums lang-rb'>
  f.button :submit, :class =&gt; 'primary'
  button_tag 'Cancel', :type =&gt; :reset, :class =&gt; "btn"
</pre>
<% end %>
