<div class="col-md-6" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Simple Form</strong>: <%= title %><br />
        <small class="text-muted">Dynamic markup generated by Simple Form</small>
      </div>
      <div>
        <span class="d-inline-block" data-bs-toggle="tooltip" title="View form source code">
          <button class="btn btn-sm btn-outline-simpleform" data-bs-toggle="modal" data-bs-target="#modal-simpleform">Source</button>
        </span>
        <button class="btn btn-sm btn-simpleform" data-fill="simpleform" data-bs-toggle="tooltip" title="Fill form with valid data">Fill</button>
      </div>
    </div>
    <div class="card-body">
      <%= yield %>
    </div>
  </div>
</div>
